{% extends 'base.html.twig' %} {% block title %}Accueil {% endblock %} {% block body %}
<main>
    <section>
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="/images/slide_mea_02.jpg" class="d-block w-100" alt="...">
                    <div class="carousel-caption">
                        <h1>Bienvenue!</h1>
                        <p class="text-slide-home">Inscrivez-vous pour en découvrir davantage</p>
                        <a class="btn" href="{{ path("app_register") }}">S'inscrire</a>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="/images/slide_mea_01.jpeg" class="d-block w-100" alt="...">
                    <div class="carousel-caption">
                        <h1>L'exposition du moment</h1>
                        <p class="text-slide-home">A ne rater sous aucun prétexte</p>
                        <a class="btn" type="submit" href="{{ path("event") }}">En savoir plus</a>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="/images/slide_mea_03.jpg" class="d-block w-100" alt="...">
                    <div class="carousel-caption">
                        <h1>Jane Keyo</h1>
                        <p class="text-slide-home">Une artiste tout en nuances de bleus</p>
                        <a class="btn" type="submit">Découvrir</a>
                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Précédent</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Suivant</span>
            </a>

        </div>
    </section>

    <section>

        <div class="container">

            <h2 class="text-center">Dernières oeuvres en ligne</h2>
                    
            <div class="card-columns">

                {% for oeuvre in oeuvres %}
                <div class="card">
                    <img class="card-img-top" src="{{ asset(dossier_images_oeuvres) ~ oeuvre.photo }}" alt="-">
                        <article class="card-body">
                        <h3><a href="{{ path('oeuvre', {'id': oeuvre.id}) }}">{{ oeuvre.nomOeuvre }}</a></h3>
                            <span class="details-oeuvre">{{ oeuvre.membre.pseudo }} / {{ oeuvre.annee ? oeuvre.annee|date('d-m-Y') : '' }}</span>
                        </article>
                </div>
                {% endfor %}

            </div>
        
           <div class="d-flex justify-content-xl-end ps-xl-5 justify-content-sm-start"><a class="btn btn-warning" href=" {{ path('oeuvres') }} ">Voir toutes les oeuvres</a></div>
        </div>
       
    </section>

    
    
    <section>
        <div class="container">
