{% extends 'base.html.twig' %}
{% block title %}Inscription - Art d'un temps{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    
    <div class="bg-dark">
        <div class="col-lg-6 mx-auto pt-3">
            <h1>inscription</h1>

            {{ form_start(registrationForm) }}

                <div class="border rounded p-4 m-3 bg-white">
                    <h2>Vos identifiants</h2>
                   
                    {{ form_row(registrationForm.email) }}
                    {{ form_row(registrationForm.plainPassword, {
                        label: "Mot de passe"
                        }) 
                    }}

                </div>
                <div class="border rounded p-4 m-3 bg-white">
                    <h2>Vos informations</h2>
                    <p>Quelques informations pour mieux vous connaître.</p>


                    
                    {{ form_row(registrationForm.agreeTerms, {
                        label: "J'accepte les Conditions Générales d'Utilisation"
                        })   }}
                </div>
                <div class="p-4 right">
                    {{ form_row(registrationForm.enregistrer) }}
                </div>

            {{ form_end(registrationForm) }}

        </div>

    </div>
            

{% endblock %}

