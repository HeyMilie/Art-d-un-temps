{% extends 'base.html.twig' %}
{% block title %}Inscription - Art d'un temps{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    
    <div class="bg-dark">
        <div class="col-lg-6 mx-auto pt-3">
            <h1>Inscription</h1>

            {{ form_start(registrationForm) }}

                <div class="border rounded p-4 m-3 bg-white">
                    <fieldset>
                        <legend><h2>Votre identité</h2></legend>
                        {{ form_row(registrationForm.nom) }}
                        {{ form_row(registrationForm.prenom) }}
                        {{ form_row(registrationForm.email) }}
                        {{ form_row(registrationForm.plainPassword) }}
                        {{ form_row(registrationForm.pseudo) }}
                        {{ form_row(registrationForm.photo) }}
                    </fieldset>
                        
                    <fieldset>
                        <legend><h2>Vos coordonnées</h2></legend>
                        {{ form_row(registrationForm.adresse) }}
                        {{ form_row(registrationForm.cp) }}
                        {{ form_row(registrationForm.ville) }}
                    </fieldset>
               
                    {{ form_row(registrationForm.agreeTerms) }}
                </div>
                <div class="p-4 d-flex justify-content-between">
                    <button type="submit" class="btn">S'inscrire</button>
                    <a class="nav-link fz-nav" href="{{ path("app_login") }}">Se connecter</a>
                </div>

            {{ form_end(registrationForm) }}

        </div>

    </div>
            

{% endblock %}

