							<a id="inscription" class="nav-link fz-nav" href="{{ path("app_register") }}">Inscription</a>
							<a class="btn btn-warning" href="{{ path("app_login") }}">Connexion</a>
						</form>
					{% endif %}
				</div>
			</div>
