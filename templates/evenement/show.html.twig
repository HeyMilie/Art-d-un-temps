{% extends 'bo_base.html.twig' %}

{% block title %}Art d'un temps - {{ evenement.titre }}{% endblock %}

{% block content %}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb bg-dark">
        <li class="breadcrumb-item"><a href="{{ path("accueil")}}">Accueil</a></li>
        <li class="breadcrumb-item"><a href="{{ path("profil_admin")}}">Profil de {{app.user.username}}</a></li>
        <li class="breadcrumb-item"><a href="{{ path('evenement_index')}}">Liste des evenement</a></li> 
        <li class="breadcrumb-item active" aria-current="page">{{ evenement.titre }}</li>
    </ol>
</nav>
    <h1>{{ evenement.titre }}</h1>
    <div class="card mt-3 mb-3">
        <div class="card-body">
            <a href="{{ path('evenement_edit', {'id': evenement.id}) }}" class="btn mb-3"><i class="fas fa-edit"></i> Modifier cet événement</a>
            <table class="table">
                <tbody>
                    <tr>
                        <th>Ville</th>
                        <td>{{ evenement.ville }}</td>
                    </tr>
                    <tr>
                        <th>Cp</th>
                        <td>{{ evenement.cp }}</td>
                    </tr>
                    <tr>
                        <th>Adresse</th>
                        <td>{{ evenement.adresse }}</td>
                    </tr>
                    <tr>
                        <th>Date</th>
                        <td>{{ evenement.date ? evenement.date|date('d-m-Y') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Titre</th>
                        <td>{{ evenement.titre }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="d-flex justify-content-between">
        <a href="{{ path('evenement_index') }}" class="btn"><i class="fas fa-arrow-left"></i> Retour</a>
        {{ include('evenement/_delete_form.html.twig') }}
    </div>
    
{% endblock %}
