{% extends 'bo_base.html.twig' %}

{% block title %}Profil {{app.user.username}} {% endblock %}

{% block content %}

	<nav aria-label="breadcrumb">
		<ol class="breadcrumb bg-dark">
			<li class="breadcrumb-item"><a href="{{ path("accueil")}}">Accueil</a></li>
			<li class="breadcrumb-item active" aria-current="page">Profil de {{app.user.username}}</li>
		</ol>
	</nav>

	<h1>Bienvenue sur votre profil {{ app.user.pseudo }}</h1>

	<h2 class="border-bottom h2-profil">Mes informations personnelles</h2>

	<div class="row justify-content-between align-items-start pb-3">
		
		<div class="col-lg-2">
			{% if app.user.photo is defined %}
				<img class="rounded img-membre m-3" src="{{ asset(dossier_images_membres) ~ app.user.photo }}" alt="photo de profil">
			{% endif %}
		</div>

		<ul class="col-lg-8 ul-profil mt-3">
			<li>Nom & Prénom : {{ app.user.nom }} {{ app.user.prenom }}</li>
			<li>Pseudo : {{ app.user.pseudo }}</li>
			<li>E-mail : {{ app.user.email }}</li>			
			<li>Adresse : {{ app.user.adresse }}</li>
			<li>Code Postal - Ville : {{ app.user.cp }} {{ app.user.ville }}</li>
		</ul>
		
		<div class="col-lg-2 mt-3">
			<a class="btn" href="{{ path('edit_profil_artiste', {'id': app.user.id}) }}">Modifier</a>
		</div>

	</div>


	<div class="container row justify-content-between align-items-center border-bottom">
		<h2 class="h2-profil">Abonnement à la newsletter</h2>
		<div class="custom-control custom-switch">
			<input type="checkbox" class="custom-control-input" id="customSwitch1">
			<label class="custom-control-label" for="customSwitch1"></label>
		</div>
	</div>


	<div class="card-columns mt-3">

		<div class="card">
            <div class="card-body">
                <h5 class="card-title">Mes oeuvres</h5>
                <ul class="ul-profil">
                    <li class="li-profil"><a href="{{ path("artiste_oeuvres") }}">Voir mes oeuvres</a></li>
                    <li class="li-profil"><a href="{{ path("artiste_oeuvre_new") }}">Ajouter une oeuvre</a></li>
                </ul>
            </div>
        </div>	

		<div class="card">
			<div class="card-body">
				<h5 class="card-title">Mes articles</h5>
				<ul class="ul-profil">
					<li class="li-profil"><a href="{{ path("artiste_articles") }}">Voir mes articles</a></li>
					<li class="li-profil"><a href="{{ path("artiste_article_new") }}">Ajouter un article</a></li>
				</ul>
			</div>
		</div>
		
	</div>



	
{% endblock %}