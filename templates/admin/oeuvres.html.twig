{% extends 'bo_base.html.twig' %}

{% block title %}Art d'un temps - Liste des oeuvres{% endblock %}

{% block content %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb bg-dark">
            <li class="breadcrumb-item"><a href="{{ path("accueil")}}">Accueil</a></li>
            <li class="breadcrumb-item"><a href="{{ path("admin_accueil")}}">Administration</a></li>
            <li class="breadcrumb-item active" aria-current="page">Liste des oeuvres</li>
        </ol>
    </nav>
    
    <h1>Liste des oeuvres</h1>

    <table class="table mt-3">
        <thead class="bg-light">
            <tr>
                <th>Ref.</th>
                <th>Photo</th>
                <th>Titre</th>
                <th>Categorie</th>
                <th>Artiste</th>
                <th>Prix</th>
                <th>Stock</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for oeuvre in oeuvres %}
            <tr class="text-table">
                <td class="align-middle">{{ oeuvre.id }}</td>
                <td class="align-middle">
                    <img class="rounded img-membre-list" src="{{ asset(dossier_images_oeuvres) ~ oeuvre.photo }}" alt="-">
                </td>
                <td class="align-middle">{{ oeuvre.titre }}</td>
                <td class="align-middle">{{ oeuvre.categorie }}</td>
                <td class="align-middle">{{ oeuvre.user.pseudo }}</td>
                <td class="align-middle">{{ oeuvre.prix }}</td>
                <td class="align-middle">{{ oeuvre.stock }}</td>
                <td class="align-middle">
                    <a href="{{ path('admin_voir_oeuvre', {'id': oeuvre.id}) }}" class="link-action"><i class="fas fa-eye"></i></a>
                    <a href="{{ path('admin_modifier_oeuvre', {'id': oeuvre.id}) }}" class="link-action"><i class="fas fa-edit"></i></a>
                </td>
        {% else %}
            <tr>
                <td class="text-table" colspan="11">Aucune oeuvre trouv√©e</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path("admin_ajouter_oeuvre")}}" class="btn">Nouvelle oeuvre</a> 

{% endblock %}