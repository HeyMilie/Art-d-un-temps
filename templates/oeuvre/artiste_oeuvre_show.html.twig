{% extends 'bo_base.html.twig' %}

{% block title %}Art d'un temps - {{ oeuvre.nomOeuvre }}{% endblock %}

{% block content %}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb bg-dark">
        <li class="breadcrumb-item"><a href="{{ path("accueil")}}">Accueil</a></li>
        <li class="breadcrumb-item"><a href="{{ path("profil_artiste")}}">Profil de {{app.user.username}}</a></li>
        <li class="breadcrumb-item active" aria-current="page">{{ oeuvre.nomOeuvre }}</li>
    </ol>
</nav>
    <h1>{{ oeuvre.nomOeuvre }}</h1>
    <div class="card mt-3 mb-3">
        <div class="card-body">
            {% if oeuvre.photo is defined %}
                <img class="rounded img-membre m-3" src="{{ asset(dossier_images_oeuvres) ~ oeuvre.photo }}" alt="oeuvre">
            {% endif %}
            <a href="{{ path('artiste_oeuvre_edit', {'id': oeuvre.id}) }}"class="btn mb-3"><i class="fas fa-edit"></i> Modifier cette oeuvre</a> 
            <table class="table">
                <tbody>
                    <tr>
                        <th>Categorie</th>
                        <td>{{ oeuvre.categorie }}</td>
                    </tr>
                    <tr>
                        <th>Nom de l'oeuvre</th>
                        <td>{{ oeuvre.nomOeuvre }}</td>
                    </tr>
                    {# <tr>
                        <th>Auteur</th>
                        <td>{{ oeuvre.membre.pseudo }}</td>
                    </tr> #}
                    <tr>
                        <th>Année</th>
                        <td>{{ oeuvre.annee ? oeuvre.annee|date('Y') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Dimension</th>
                        <td>{{ oeuvre.dimension }}</td>
                    </tr>
                    <tr>
                        <th>Prix</th>
                        <td>{{ oeuvre.prix }} €</td>
                    </tr>
                    <tr>
                        <th>Stock</th>
                        <td>{{ oeuvre.stock }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="d-flex justify-content-between">
        <a href="{{ path('profil_artiste') }}" class="btn"><i class="fas fa-arrow-left"></i> Retour</a>
        {{ include('oeuvre/_delete_form.html.twig') }}
    </div>

{% endblock %}
