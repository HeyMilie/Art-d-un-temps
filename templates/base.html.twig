		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}

		{% endblock %}
	</head>
	<body>
		<div class="container-fluid">
			{{ include("menu.html.twig") }}

			<h1>
				{% block titreH1 %}{% endblock %}
